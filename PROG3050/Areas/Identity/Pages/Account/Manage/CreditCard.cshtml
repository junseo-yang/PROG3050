@page
@model CreditCardModel
@{
    ViewData["Title"] = "Credit Card";
    ViewData["ActivePage"] = ManageNavPages.CreditCard;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.CreditCard" class="form-control" />
                <label asp-for="Input.CreditCard" class="form-label"></label>
                <span asp-validation-for="Input.CreditCard" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input type="month" asp-for="Input.CreditCardExpiry" class="form-control" />
                <label asp-for="Input.CreditCardExpiry" class="form-label"></label>
                <span asp-validation-for="Input.CreditCardExpiry" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
