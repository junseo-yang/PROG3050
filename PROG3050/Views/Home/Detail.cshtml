@model PROG3050.ViewModel.HomeViewModel

@{
    ViewData["Title"] = "Game Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Game Details</h1>

@if (Model != null && Model.CurrentGame != null)
{
    <table class="table">
        <h4>Game</h4>
        <hr />
        <dl class="row">
                    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.CurrentGame.Title)
        </dt>
        <dd class="col-sm-10">
        @Html.DisplayFor(model => model.CurrentGame.Title)
        </dd>
        <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.CurrentGame.Description)
        </dt>
        <dd class="col-sm-10">
        @Html.DisplayFor(model => model.CurrentGame.Description)
        </dd>
        <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.CurrentGame.Price)
        </dt>
        <dd class="col-sm-10">
        @Html.DisplayFor(model => model.CurrentGame.Price)
        </dd>
        <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.CurrentGame.PublishDate)
        </dt>
        <dd class="col-sm-10">
        @Html.DisplayFor(model => model.CurrentGame.PublishDate)
        </dd>
        <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.CurrentGame.GameCategory)
        </dt>
        <dd class="col-sm-10">
        @Html.DisplayFor(model => model.CurrentGame.GameCategory.GameCategoryName)
        </dd>
        </dl>
    </table>
    <table class="table table-hover">
        <thead>

        </thead>
    </table>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>

