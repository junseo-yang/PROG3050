@model PROG3050.ViewModel.WishlistViewModel

@{
    ViewData["Title"] = "Wishlist";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Wishlist</h1>

@if (Model != null && Model.Wishlist.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Game Title</th>
                <th>Price</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Wishlist)
            {
                <tr>
                    <td>@item.Game.Title</td>
                    <td>@item.Game.Price</td>
                    <td>
                        <form method="post" asp-action="RemoveFromWishlist" asp-route-gameId="@item.GameId">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>



    <button id="twitterShareLink" class="btn btn-primary" onclick="copyTitles()">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-twitter" viewBox="0 0 16 16">
            <path d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334 0-.14 0-.282-.006-.422A6.685 6.685 0 0 0 16 3.542a6.658 6.658 0 0 1-1.889.518 3.301 3.301 0 0 0 1.447-1.817 6.533 6.533 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.325 9.325 0 0 1-6.767-3.429 3.289 3.289 0 0 0 1.018 4.382A3.323 3.323 0 0 1 .64 6.575v.045a3.288 3.288 0 0 0 2.632 3.218 3.203 3.203 0 0 1-.865.115 3.23 3.23 0 0 1-.614-.057 3.283 3.283 0 0 0 3.067 2.277A6.588 6.588 0 0 1 .78 13.58a6.32 6.32 0 0 1-.78-.045A9.344 9.344 0 0 0 5.026 15z" />
        </svg>
        Share on Twitter
    </button>



}
else
{
    <p>Your wishlist is empty.</p>
}

@section scripts {
    <script async defer crossorigin="anonymous" src="https://connect.facebook.net/en_US/sdk.js"></script>



    <script>
        function copyTitles() {
            var titles = document.querySelectorAll('.table-striped td:nth-child(1)');
            var titlesArray = Array.from(titles).map(td => td.textContent.trim()).join(', ');

            titlesArray = titlesArray.replace(/,/g, '\n');

            var additionalText = "[This is My Wish List !!]\n\n";

            var textarea = document.createElement('textarea');
            textarea.value = titlesArray;
            document.body.appendChild(textarea);
            textarea.select();
            document.execCommand('copy');
            document.body.removeChild(textarea);

            var twitterShareLink = document.getElementById('twitterShareLink');
            twitterShareLink.href = "https://twitter.com/intent/tweet?url=&text=" + encodeURIComponent(additionalText + titlesArray)

            window.open(twitterShareLink.href, "_blank");
        }

        function shareOnTwitter() {
            window.open("https://twitter.com/intent/tweet?url=&text=" + encodeURIComponent(additionalText + titlesArray), "_blank");
        }

    </script>



}