@model PROG3050.ViewModel.DownloadViewModel

<h1>Download</h1>

<h2>Free Games</h2>
@if (Model.FreeGame != null)
{
    <p>@Model.FreeGame.Title <a href="@Url.Action("DownloadGame", "Download", new { gameId = Model.FreeGame.GameId })">Download</a></p>
}
else
{
    <p>No free games available for download.</p>
}

<h2>Purchased Games</h2>
@if (Model.PurchasedGames.Any())
{
    foreach (var game in Model.PurchasedGames)
    {
        <p>@game.Title <a href="@Url.Action("DownloadGame", "Download", new { gameId = game.GameId })">Download</a></p>
    }
}
else
{
    <p>No purchased games available for download.</p>
}
