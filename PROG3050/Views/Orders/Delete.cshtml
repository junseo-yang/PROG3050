@model PROG3050.Models.Order

@{
    ViewData["Title"] = "Order Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Order Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
        <dt class = "col-sm-2">
            Shipping Address
        </dt>
        <dd class = "col-sm-10">
            @{
                string shippingAddress = "";
                if (Model.Unit.Length != 0)
                {
                    shippingAddress = $"{Model.Unit}, ";
                }
                shippingAddress += $"{Model.Street}, {Model.City}, {Model.Province.ProvinceName}, {Model.PostalCode}, {Model.Province.Country.CountryName}";
            }
            @Html.DisplayFor(modelItem => shippingAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderCost)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderCost)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="OrderId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
