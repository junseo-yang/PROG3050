@{
}
@model PROG3050.ViewModel.WishlistViewModel

@{
    ViewData["Title"] = "Friend/Family";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Wish List</h1>

@if (Model != null && Model.Wishlist.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Game Title</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Wishlist)
            {
                <tr>
                    <td>@item.Game.Title</td>
                    <td>@item.Game.Price</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>User doesn't have any wishlist.</p>
}

<div class="modal-footer">
    <a asp-controller="FriendFamilies" asp-action="Index">Go Back</a>
</div>


