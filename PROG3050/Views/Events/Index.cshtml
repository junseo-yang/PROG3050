@* @model IEnumerable<PROG3050.Models.Event> *@

@model PROG3050.ViewModel.EventViewModel

@{
    ViewData["Title"] = "Events";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Events</h1>

<p>
    <a asp-action="Create">Create New Event</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Description
            </th>
            <th>
                StartDateTime
            </th>
            <th>
                EndDateTime
            </th>
            <th>
                Action
            </th>
    </thead>
    <tbody>
        @foreach (var item in Model.Events)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDateTime)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.EventId">Details</a>
                    @if (item.EventUsers.Any(x => x.UserId == Model.CurrentUserId))
                    {
                        <a class="btn btn-outline-danger" asp-action="CancelEvent" asp-route-id="@item.EventId">Cancel Event</a>
                    }
                    else
                    {
                        <a class="btn btn-outline-success" asp-action="RegisterEvent" asp-route-id="@item.EventId">Register Event</a>
                    }
                    @if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin") || User.IsInRole("Moderator"))
                    {

                        <a class="btn btn-outline-primary asp-action="Edit" asp-route-id="@item.EventId">Edit</a>
                        <a class="btn btn-outline-primary asp-action="Delete" asp-route-id="@item.EventId">Delete</a>

                    }
                </td>


            </tr>
        }
    </tbody>
</table>
